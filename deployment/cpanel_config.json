{
  "application": {
    "name": "Cafe Revenue Management System",
    "version": "1.0.0",
    "python_version": "3.8+",
    "backend": {
      "directory": "backend",
      "entry_point": "passenger_wsgi.py",
      "app_variable": "application",
      "port": 9000,
      "startup_file": "start_backend.py"
    },
    "frontend": {
      "build_command": "npm run build",
      "output_directory": "dist",
      "development_port": 3010
    }
  },
  "dependencies": {
    "backend": "backend/requirements.txt",
    "frontend": "package.json"
  },
  "environment_variables": {
    "DATABASE_URL": "mysql://cafedrev_cafedrev:cafedrevenue@localhost:3306/cafedrev_database",
    "SECRET_KEY": "your-super-secret-key-change-this-in-production",
    "ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": 30,
    "FRONTEND_URL": "https://staging.cafedrev.com",
    "ALLOWED_ORIGINS": "https://staging.cafedrev.com,https://www.staging.cafedrev.com",
    "DEBUG": false,
    "LOG_LEVEL": "INFO"
  },
  "database": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "name": "cafedrev_database",
    "username": "cafedrev_cafedrev",
    "password": "cafedrevenue"
  },
  "domain": {
    "name": "staging.cafedrev.com",
    "url": "https://staging.cafedrev.com"
  },
  "deployment_steps": [
    "1. Set up Python application in cPanel",
    "2. Configure application root to point to backend directory",
    "3. Set entry point to passenger_wsgi.py:application",
    "4. Install backend dependencies using pip",
    "5. Set environment variables in cPanel",
    "6. Initialize MySQL database using init_mysql_db.py",
    "7. Build frontend using npm run build",
    "8. Upload frontend build to public HTML directory",
    "9. Configure web server to serve frontend and proxy API requests to backend"
  ]
}